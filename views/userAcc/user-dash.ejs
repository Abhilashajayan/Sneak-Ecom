    <div class="d-flex justify-content-center mt-5">
        <h1 class="head">My Account</h1>
    </div>
    <div class="container">
        <section class="container p-4 d-flex">
            <div class="col-md-2 col-lg-2 col-12 px-0  sidebar">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3  text-white">
                    <ul class="nav nav-pills flex-column mb-sm-auto  align-items-center align-items-sm-start" id="menu">
                        <!-- <li class="nav-item mt-2 text-center text-sm-start mb-2">
