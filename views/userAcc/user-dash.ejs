                                <span class="ms-1 d-sm-inline active">Dashboard</span>
                            </a>
                        </li>
                        <li class="mt-2">
                            <a href="#orders" class="nav-link px-0" id="ordersLink" >
                                <span class="ms-1 d-sm-inline">Orders</span>
                            </a>
                        </li>
                        <li class="mt-2">
                            <a href="#address" id="addressLink" class="nav-link px-0" onclick="scrollToSection('#address')">
                                <span class="ms-1 d-sm-inline hide-on-small">Address</span>
                            </a>
                        </li>
                        <li class="mt-2">
                            <a href="#wallet" class="nav-link px-0" id="walletLink"  onclick="scrollToSection('#wallet')">
                                <span class="ms-1 d-sm-inline hide-on-small">Sneak Wallet</span>
                            </a>
                        </li>
                        <li class="mt-4 align-middle">
                            <form action="/logout" method="get">
                                <button class="bg-dark text-light btn" type="submit">Logout</button>
                            </form>
                            
                        </li>
                    </ul>
                    <hr>
                </div>
            </div>
            
                <%- include('./userPart/dashboard') %>
                
                <%- include('./userPart/orders') %>
