<div class="modal fade" id="editProductModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title font-semibold text-2xl">Edit Product</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form  id="editProductForm" enctype="multipart/form-data">
            <!-- images simple upload -->
            <input type="text" class="form-control d-none" name="userId" id="userId" value="" placeholder="Enter your user ID">
            <div class="mb-4">
              <img src="" id="productImage" alt="Product Image" width="100" height="120" class="rounded">
              <img src="" id="nn" alt="Product Image" width="100" height="120" class="rounded">
            </div>
            <br>
            <div class="mb-4">
              <label for="newImage">Choose a new image:</label>
              <input type="file" name="productImage" accept="image/*">
            </div>
            <input type="text" class="form-control d-none" id="cloud_id" name="cloudinary_id" value="" placeholder="Enter your user ID">
            <!-- product title -->
            <div class="mb-4">
              <label for="productTitle" class="form-label">Product Title</label>
              <input type="text" id="productTitles" name="productTitle" placeholder="Product title" class="form-control">
            </div>
            <!-- product category -->
            <div class="mb-3">
              <label for="productCategory" id="cata" class="form-label">Product Category</label>
              <select class="form-select" id="category" name="productCategory" required>
                <option value="" disabled selected>Select a category</option>
                <% categoryData.forEach((category) => { %>
                    <option value="<%= category.categoryName%>" id="productCategory"><%= category.categoryName %></option>
                <% }); %>
            </select>
            </div>
            <!-- product price -->
            <div class="mb-4">
              <label for="productPrice" class="form-label">Product Price</label>
              <input type="number" id="productPrices" name="productPrice" placeholder="Product price" class="form-control">
            </div>
            <!-- Sale price -->
            <div class="mb-4">
              <label for="discount" class="form-label">Discount</label>
              <input type="number" id="discounts" name="discount" placeholder="Discount" class="form-control">
            </div>
            <!-- stock -->
            <div class="mb-4">
              <label for="stock" class="form-label">Stock</label>
              <input type="number" id="stocks" name="stock" placeholder="Stock" class="form-control">
            </div>
            <div class="mb-3">
              <label for="isFeatured" class="form-label">Is Featured?</label>
              <select class="form-select" id="isFeatured" name="isListed" required>
                <option value="true">Yes</option>
                <option value="false">No</option>
              </select>
            </div>
            
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">CANCEL</button>
                <button type="submit" form="editProductForm" class="btn btn-primary">SAVE CHANGES</button>
              </div>
          </form>
        </div>
       
      </div>
    </div>
  </div>